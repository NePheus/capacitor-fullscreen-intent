<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nepheus.capacitor.fullscreennotification">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application>
        <receiver android:name="nepheus.capacitor.fullscreennotification.MessagingServiceStarter" android:exported="false">
            <intent-filter>
                <action android:name="@string/intent_filter_action_startservice" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="nepheus.capacitor.fullscreennotification.MessagingService" android:exported="false">
        </service>
    </application>
</manifest>
